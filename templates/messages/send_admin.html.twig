{% extends 'admin/base.html.twig' %}
{% block css %}
    {{ parent() }}
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
    />
{% endblock css %}


{% block main %}
    <section class="flex container justify-content-center blockMsg">
        <div class="row">
            <div class="col-12">
                <h3 class="m-5">Envoyer un message</h3>
                {{ form_start(form) }}
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">{{ form_label(form.recipientuser) }}</label>
                    {{ form_widget(form.recipientuser, {'attr': {'class': 'form-control'}}) }}

                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">{{ form_label(form.message) }}</label>
                    {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="d-flex justify-content-center m-5">

                    <button class="btn-grad" type="submit">Envoyer</button>
                    <input
                            onclick="window.location.href = '{{ path('admin_home', {'id': app.user.id}) }}'"
                            class="btn-grad"
                            type="button"
                            value="Retour"
                    />

                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>



{% endblock %}
