{% extends 'base.html.twig' %}
{% block css %}
    {{ parent() }}<link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
    />
{% endblock css %}
{% block title %}Hello MessagesController!{% endblock %}

{% block main %}
    <section class="flex container blockMsg">
        <div class="row">
            <div class="col-12 m-5">
                <h3>Messagerie</h3>
                
                <p>Message de {{ message.senderadmin.email }}</p>
                <p class="my-5">Le {{ message.createdAt|date }}</p>
                <div>{{ message.message }}</div>


                <div class="d-flex justify-content-center m-5">

                    <input
                            onclick="window.location.href = '{{ path('send') }}'"
                            class="btn-grad"
                            type="button"
                            value="Repondre"
                    />
                    <input
                            onclick="window.location.href = '{{ path('admin_home', {'id': app.user.id}) }}'"
                            class="btn-grad"
                            type="button"
                            value="Retour"
                    />

                </div>
                </div>
            </div>
    </section>



{% endblock %}
