{% extends 'base.html.twig' %}
{% block css %}
    {{ parent() }}
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
    />
{% endblock css %}


{% block main %}
    <section class="flex container justify-content-center blockMsg">
        <div class="row">
            <div class="col-12">
                <h3 class="m-5">Envoyer un message</h3>
                {{ form(form) }}
                <div class="d-flex justify-content-center m-5">

                    <button class="btn-grad" type="submit">Envoyer</button>
                    <input
                            onclick="window.location.href = '{{ path('user_info_track', {'id': app.user.id}) }}'"
                            class="btn-grad"
                            type="button"
                            value="Retour"
                    />

                </div>
            </div>
        </div>
    </section>



{% endblock %}
