{% block css %}
    <link href="{{ asset('css/login.css') }}" type="text/css" rel="stylesheet">
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
    />
{% endblock css %}
<section class="login">


    <div class="logo">
        <img class="ImgLogo" src="{{ asset('img/logo/logo_small.png') }}">
    </div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="form">
        <form action="{{ path('login') }}" method="post">
            <div class="mb-3">
                <label class="form-label" for="username">Email:</label>
                <input class="form-control" type="text" id="username" name="_username"
                       value="{{ last_username }}"/>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password:</label>
                <input class="form-control" type="password" id="password" name="_password"/>
            </div>
            <div class="d-flex justify-content-center">

                <button class="btn-grad" type="submit">login</button>

                <input
                        onclick="window.location.href = '{{ path('home') }}'"
                        class="btn-grad"
                        type="button"
                        value="Retour"
                />
            </div>
        </form>
        <p>Si vous n'avez pas de compte, vous devez vous inscrire en cliquant <a class=""
                                                                                 href="{{ path('user_create_info') }}">ici</a>
        </p>
    </div>
</section>
